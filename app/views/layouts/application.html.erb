<!DOCTYPE html>
<html>
  <head>
    <title>Flickr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Flickr Clone</a>
      </div>
      <div class="nav navbar-nav">
        <% if is_admin? %>
          <li><%= link_to 'Admin', users_path %></li>
        <% end %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
          <li><%= link_to current_user.username, user_path(current_user) %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, :data => {:method=>'delete'} %></li>
        <% else %>
          <li><%= link_to 'Sign Up',  new_user_registration_path %></a></li>
          <li><%= link_to 'Sign In', new_user_session_path %></a></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <body>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
